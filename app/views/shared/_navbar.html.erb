<nav>
  <%= link_to "Inkwell Blog", root_path, id: "logo" %>
  <ul class="nav-links">
    <% if user_signed_in? %>
      <li><%= link_to "Users", users_path, class: current_page?(users_path) ? "active" : "" %></li>
